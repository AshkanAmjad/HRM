@model ERP.Models.LoginViewModel

@{
    ViewData["Title"] = "ورود - سطح شهرستان";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}

<div class="row d-flex justify-content-center my-md-4 mx-0">
    <div class="col-md-3 border bg-light p-0 rounded-lg box-form">
        <div class="border-bottom bg-info col-md-12 py-md-2 rounded-top">
            @if (ViewBag.IsSuccess != null)
            {
                <div class="alert alert-success p-1 cursor">
                    <p class="help-block my-0 font-alertLogin">ورود با موفقیت انجام شد.</p>
                </div>
                <script>
                    var delay = 3000;
                    setTimeout(function () { window.location = "http://localhost:3449/CountyArea"; }, delay);
                </script>
            }
            @if (ViewBag.IsSuccessResetPass == true)
            {
                <div class="alert alert-success p-1 cursor" id="IsSuccessResetPass">
                    <p class="help-block my-0 font-alertLogin">رمز عبور با موفقیت تغییر یافت.</p>
                </div>
                <script>
                    var delay = 5000;
                    setTimeout(function () { document.getElementById("IsSuccessResetPass").classList.add("hidden") }, delay);
                </script>
            }
            <div class="rounded-circle mx-auto login-logo text-center d-flex align-items-center justify-content-center">
                <img src="~/icons/login-logo.png" />
            </div>
            <h4 class="text-white-50 mt-md-3 cursor text-center">
                سامانه مدیریت منابع انسانی<br />
                <span class="login-h4-span">سطح دسترسی شهرستان</span>
            </h4>
        </div>

        <div class="col-md-12">
            <form asp-controller="Account" asp-action="CLogin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="nationalCode" class="control-label font-weight-bold"></label>
                    <input asp-for="nationalCode" class="form-control" maxlength="10" autocomplete="off" />
                    <span asp-validation-for="nationalCode" class="text-danger cursor"></span>
                </div>
                <div class="form-group mb-0">
                    <label asp-for="userPass" class="control-label font-weight-bold"></label>
                    <input asp-for="userPass" class="form-control" autocomplete="off" />
                    <span asp-validation-for="userPass" class="text-danger cursor"></span>
                </div>
                <a asp-controller="Account" asp-action="ForgotPasswordCounty" class="a-forgetPassword text-decoration-none">رمز عبور خود را فراموش کرده ام</a>
                <div class="form-group">
                    <input type="submit" value="ورود" class="btn btn-primary w-100 mb-md-2 mt-md-3" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row m-0 p-0">
    <div class="col-12 d-flex justify-content-end ">
        <div class="button-back d-flex align-items-center justify-content-center rounded-lg mx-md-1 position-fixed bg-primary">
            <a asp-area="" asp-controller="home" asp-action="index" class="text-decoration-none text-light">&larr;</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}