                        <option selected>معاونت گیرنده را انتخاب کنید</option>
                        @foreach (var item in Roles)
                        {
                            <option value="@item.RoleId"> @item.RoleTitle</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="row m-0 p-0">
